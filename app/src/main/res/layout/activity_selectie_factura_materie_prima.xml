<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".SelectieFacturaMateriePrimaActivity"
    android:background="@color/colorFundalSelectie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/edittext_greutateTotala"
            android:layout_width="550dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:hint="@string/greutate_materie_prima_din_factura"
            android:textColor="@color/colorGalben"
            android:textSize="30sp"
            />

        <EditText
            android:id="@+id/edittext_NrFactura"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType = "numberDecimal"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:hint="@string/facturaEditText"
            android:textColor="@color/colorGalben"
            android:textSize="30sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSelectieTransare"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:overScrollMode="ifContentScrolls"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        android:scrollbarSize="15dp"
        android:padding="5dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>