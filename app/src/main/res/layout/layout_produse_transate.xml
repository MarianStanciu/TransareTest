<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:background="@color/colorGalben"
    android:gravity="center_vertical"
    >
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorAlbastru"
        />

    <TextView

        android:id="@+id/rezultat_transare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:lines="2"
        android:padding="10dp"
        android:text="cotlet porc"
        android:textColor="#000"
        android:textSize="40sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorGri"/>
    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:id="@+id/greutate_introd_rezultat_transare"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="40sp"
        android:inputType="numberDecimal"/>


    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorGri"/>
</LinearLayout>