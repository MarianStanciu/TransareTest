<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginLeft="30dp"
    android:background="#7CCDCDD5"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:elevation="12dp">
<!--    android:weightSum="100"-->


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/afisareImaginiSelectie"
        android:layout_width="157dp"

        android:layout_height="140dp"

        android:layout_centerInParent="true"
        android:src="@drawable/curcan" />

    <TextView
        android:id="@+id/textViewAfisareImaginiSelectie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="test verificare"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCod_Int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cod_int"
        android:textColor="@color/colorAccent"
        />


</RelativeLayout>